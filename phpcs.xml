<?xml version="1.0"?>
<ruleset name="GreenworkPHPCodingStandard">
    <description>Greenwork PHP Coding Standard</description>

    <!-- Display progress -->
    <arg value="p"/>
    <!-- Use colorized output -->
    <arg name="colors"/>

    <!-- Paths to check -->
    <file>models</file>
    <file>routes</file>
    <file>src</file>
    <file>public</file>

    <!-- Don't check the vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Use PSR12 as a base -->
    <rule ref="PSR12"/>
</ruleset>
